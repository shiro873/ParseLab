		{
			"name": "Workflows",
			"item": [
				{
					"name": "Enqueue & Poll",
					"item": [
						{
							"name": "1. Submit Article",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"// Save jobId from response",
											"if (pm.response.code === 202) {",
											"    const response = pm.response.json();",
											"    if (response.jobIds && response.jobIds.length > 0) {",
											"        pm.environment.set('jobId', response.jobIds[0]);",
											"        console.log('Job submitted:', response.jobIds[0]);",
											"    }",
											"}"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"articles\": [\n    {\n      \"id\": \"workflow-article\",\n      \"title\": \"Workflow Test Article\",\n      \"content\": \"This is a test article for the enqueue and poll workflow. It contains multiple sentences and paragraphs.\\n\\nThis is the second paragraph with more content.\"\n    }\n  ]\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{baseUrl}}/articles",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"articles"
									]
								},
								"description": "Step 1: Submit an article for analysis"
							}
						},
						{
							"name": "2. Poll for Results",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"// Check if job is completed",
											"if (pm.response.code === 200) {",
											"    const response = pm.response.json();",
											"    if (response.status === 'completed') {",
											"        console.log('Job completed! Analysis:', response.analysis);",
											"    } else if (response.status === 'processing' || response.status === 'queued') {",
											"        console.log('Job still processing. Status:', response.status);",
											"        console.log('Poll again in a few seconds...');",
											"    } else if (response.status === 'failed') {",
											"        console.log('Job failed:', response.error);",
											"    }",
											"}"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "GET",
								"header": [],
								"url": {
									"raw": "{{baseUrl}}/articles/{{jobId}}",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"articles",
										"{{jobId}}"
									]
								},
								"description": "Step 2: Poll for job status. Repeat until status is 'completed' or 'failed'."
							}
						}
					],
					"description": "Complete workflow: Submit an article and poll for results until completion."
				},
